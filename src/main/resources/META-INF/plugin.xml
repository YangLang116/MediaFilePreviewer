<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.xtu.plugins.reviewer</id>
    <name>MediaFilePreviewer</name>
    <vendor email="yanglang116@gmail.com">yanglang116@gmail.com</vendor>

    <idea-version since-build="211"/>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.javafx</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!--svga-->
        <fileType name="svga file"
                  implementationClass="com.xtu.plugin.previewer.svga.SvgaFileType"
                  fieldName="INSTANCE"
                  language="svga"
                  extensions="svga"/>
        <fileEditorProvider implementation="com.xtu.plugin.previewer.svga.SvgaFileEditorProvider"/>
        <!--lottie-->
        <fileType name="lottie file"
                  implementationClass="com.xtu.plugin.previewer.lottie.LottieFileType"
                  fieldName="INSTANCE"
                  language="lottie"
                  extensions="json"/>
        <fileEditorProvider implementation="com.xtu.plugin.previewer.lottie.LottieFileEditorProvider"/>
        <!--audio-->
        <fileType name="wav file"
                  implementationClass="com.xtu.plugin.previewer.audio.wav.AudioWavFileType"
                  fileNames="INSTANCE"
                  language="wav"
                  extensions="wav"/>
        <fileType name="mp3 file"
                  implementationClass="com.xtu.plugin.previewer.audio.mp3.AudioMp3FileType"
                  fileNames="INSTANCE"
                  language="mp3"
                  extensions="mp3"/>
        <fileEditorProvider implementation="com.xtu.plugin.previewer.audio.AudioFileEditorProvider"/>
    </extensions>

</idea-plugin>
